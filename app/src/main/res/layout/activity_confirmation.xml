<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_warning_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@mipmap/warning1"/>

        <TextView
            android:id="@+id/warningText"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="20dp"
            android:textColor="@color/endavaWhite"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/confirmDeletionButton"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:text="Yes"
                android:textColor="@color/endavaWhite"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="18dp"
                android:background="@drawable/pop_warning_button"/>

            <Button
                android:id="@+id/abortDeletionButton"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="No"
                android:textColor="@color/endavaWhite"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="18dp"
                android:background="@drawable/pop_warning_button"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>