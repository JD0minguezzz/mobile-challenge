<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/backButtonToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp" />

            <!-- ImageView
                android:id="@+id/bookCover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/default_cover" / -->

            <TextView
                android:id="@+id/textAuthorView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textIsbnView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textLanguageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textPublisherView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_edit"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/save_button"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="@string/edit_book"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/endavaWhite" />

                    <Button
                        android:id="@+id/button_delete"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:background="@drawable/save_button"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="@string/delete_book"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/endavaWhite" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>