<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:weightSum="12">

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/back_button"
            android:src="@drawable/ic_close_solid" />

        <TextView
            android:id="@+id/textView"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="30dp"
            android:text="Name:"
            android:textColor="@color/popText"/>

        <TextView
            android:id="@+id/name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="30dp"
            android:text="Author"
            android:textColor="@color/popText"/>

        <TextView
            android:id="@+id/author"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="30dp"
            android:text="ISBN:"
            android:textColor="@color/popText"/>

        <TextView
            android:id="@+id/isbn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="30dp"
            android:text="Language:"
            android:textColor="@color/popText"/>

        <TextView
            android:id="@+id/language"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="30dp"
            android:text="Publisher:"
            android:textColor="@color/popText"/>

        <TextView
            android:id="@+id/publisher"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/edit_book"
                android:textColor="@color/endavaWhite"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:background="@drawable/pop_button"/>

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/delete_book"
                android:textColor="@color/endavaWhite"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:background="@drawable/pop_button"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>