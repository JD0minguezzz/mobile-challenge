<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/backButtonToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto_condensed_light"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="20dp"
                android:textColor="@color/textMessage"
                android:text="@string/new_book_message" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="20dp"
                android:textColor="@color/textMessage"
                android:text="@string/edit_text_name" />

            <EditText
                android:id="@+id/edit_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/big_padding"
                android:layout_marginBottom="@dimen/big_padding"
                android:fontFamily="@font/ubuntu_light"
                android:inputType="textAutoComplete"
                android:padding="@dimen/small_padding"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="20dp"
                android:textColor="@color/textMessage"
                android:text="@string/edit_text_author" />

            <EditText
                android:id="@+id/edit_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/big_padding"
                android:layout_marginBottom="@dimen/big_padding"
                android:fontFamily="sans-serif-light"
                android:inputType="textAutoComplete"
                android:padding="@dimen/small_padding"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="20dp"
                android:textColor="@color/textMessage"
                android:text="@string/edit_text_isbn" />

            <EditText
                android:id="@+id/edit_book_isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/big_padding"
                android:layout_marginBottom="@dimen/big_padding"
                android:fontFamily="sans-serif-light"
                android:inputType="number"
                android:padding="@dimen/small_padding"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="20dp"
                android:textColor="@color/textMessage"
                android:text="@string/edit_text_language" />

            <EditText
                android:id="@+id/edit_book_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/big_padding"
                android:layout_marginBottom="@dimen/big_padding"
                android:fontFamily="sans-serif-light"
                android:inputType="textAutoComplete"
                android:padding="@dimen/small_padding"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="20dp"
                android:textColor="@color/textMessage"
                android:text="@string/edit_text_publisher" />

            <EditText
                android:id="@+id/edit_book_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/big_padding"
                android:layout_marginBottom="@dimen/big_padding"
                android:fontFamily="sans-serif-light"
                android:inputType="textAutoComplete"
                android:padding="@dimen/small_padding"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_save"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/save_button"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="@string/button_save"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/endavaWhite" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>